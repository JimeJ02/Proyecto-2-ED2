ESP32
#include <Arduino.h>

#define PIN_ECHO 12
#define PIN_TRIG 13
#define LED 4

int valorSensor = 0;

void setup() {
  Serial.begin(115200);
  Serial2.begin (115200);
  pinMode(LED_BUILTIN, OUTPUT);
  pinMode(13, OUTPUT);
  pinMode(12, INPUT);
  pinMode(4, OUTPUT); 
  
}

void loop() {
  // Start a new measurement:
  digitalWrite(PIN_TRIG, HIGH);
  delayMicroseconds(10);
  digitalWrite(PIN_TRIG, LOW);

  // Read the result:
  int duration = pulseIn(PIN_ECHO, HIGH);
  Serial.print("Distancia en cm: ");
  Serial.println(duration / 58);

  delay(1000);
}


TIVA
#include <Arduino.h>
#include <SPI.h>
#include <Adafruit_GFX.h>
#include <Adafruit_ILI9341.h>
#include <SD.h>
#include <Tone.h>

#define TFT_DC 9
#define TFT_CS 10
#define PIN_BUZZER 8
#define PIN_SD 5

Adafruit_ILI9341 tft = Adafruit_ILI9341(TFT_CS, TFT_DC);

Tone buzzer (PIN_BUZZER);

medicionRealizada = false

void setup() {
  Serial.begin(115200);
  //Serial2.begin (115200);

  if (digitalRead(BOTON_PIN) == LOW) {
    medicionRealizada = false;

  pinMode(8, OUTPUT);

  tft.begin();

  tft.setCursor(26, 160);
  tft.setTextColor(ILI9341_RED);
  tft.setTextSize(2);
  tft.println("valor cm");

  tft.setCursor(20, 120);
  tft.setTextColor(ILI9341_GREEN);
  tft.setTextSize(2);
  tft.println("Distancia en cm:");

  buzzer.begin();

}

void loop() {
    if (digitalRead(2) == LOW && medicionRealizada) {
    mostrarEnPantalla(valorSensor);
    buzzer.play(400, 100); // confirmaci√≥n
    guardarEnTarjetaSD(valorSensor);
    buzzer.play(800, 100); //almacenamiento
  }
}

